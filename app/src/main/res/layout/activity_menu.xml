<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fundoapp"
    tools:context=".menu">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/Navbar"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigation" />

    <ScrollView
        android:id="@+id/scrollViewMenu"
        android:layout_width="410dp"
        android:layout_height="644dp"
        android:padding="20dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/infoTextViewTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:fontFamily="@font/audiowide"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="@string/saudacao"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />


            <ListView
                android:id="@+id/customListView"
                android:layout_width="match_parent"
                android:layout_height="511dp"
                android:divider="@color/black"
                android:dividerHeight="2dp"
                android:listSelector="@color/white" />

            <TextView
                android:id="@+id/infoTextView"
                android:layout_width="349dp"
                android:layout_height="226dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/im_fell_french_canon_sc"
                android:justificationMode="inter_word"
                android:minHeight="0dp"
                android:text="@string/HomeIntroducao"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="TextSizeCheck" />

            <ImageButton
                android:id="@+id/imageVideo1"
                android:layout_width="wrap_content"
                android:layout_height="246dp"
                android:layout_margin="15dp"
                android:contentDescription="@string/DescricaoImagem"
                android:src="@drawable/image"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/infoTextView2"
                android:layout_width="wrap_content"
                android:layout_height="377dp"
                android:layout_margin="5dp"
                android:fontFamily="@font/im_fell_french_canon_sc"
                android:justificationMode="inter_word"
                android:text="@string/Home"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:autoSizeTextType="uniform" />

            <ImageButton
                android:id="@+id/imageVideo2"
                android:layout_width="wrap_content"
                android:layout_height="246dp"
                android:layout_margin="15dp"
                android:contentDescription="@string/DescricaoImagem"
                android:src="@drawable/image" />

            <TextView
                android:id="@+id/infoTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/im_fell_french_canon_sc"
                android:justificationMode="inter_word"
                android:text="@string/Home"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:autoSizeTextType="uniform" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
